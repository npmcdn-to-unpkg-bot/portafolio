<div id='masonry'>

<% @images.each do |image| %>
  <%= link_to image.image_url.to_s,class: "swipebox" do %>
    <div class="hov col-lg-4 col-md-4 col-sm-6 col-xs-12">
      <div class="hovereffect">
        <%= image_tag image.image_url.to_s, :class => "img-responsive" %>
        <div class="overlay">
           <h2><%= image.name %></h2>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

